<%- include('partials/header.ejs') %>

<div class="container d-flex flex-column justify-content-center align-items-center project">
    <h2 class="mb-4">Create a New Post</h2>
    <form action="/new" method="POST" class="w-50">
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required />
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Content:</label>
        <textarea id="content" name="content" rows="10" class="form-control" required></textarea>
      </div>
      <div class="text-center">
        <button class="btn btn-primary rounded-pill px-3" type="submit">
          Create Post
        </button>
      </div>
    </form>
  </div>
  

